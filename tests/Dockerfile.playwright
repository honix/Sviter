# Playwright E2E Test Runner
# Based on official Playwright image with all browsers pre-installed

FROM mcr.microsoft.com/playwright:v1.55.0-noble

WORKDIR /app

# Copy package files from frontend (context is repo root)
COPY frontend/package.json frontend/package-lock.json ./

# Install dependencies
RUN npm ci

# Copy test files and config from frontend
COPY frontend/playwright.config.ts ./
COPY frontend/e2e/ ./e2e/

# Create directories for reports
RUN mkdir -p playwright-report test-results

# Run Playwright tests
# Reporters: list (console), html (downloadable report), github (PR annotations)
CMD ["npx", "playwright", "test", "--reporter=list,html,github"]
