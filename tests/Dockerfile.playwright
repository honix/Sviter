# Playwright E2E Test Runner
# Based on official Playwright image with all browsers pre-installed

FROM mcr.microsoft.com/playwright:v1.55.0-noble

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci

# Copy test files and config
COPY playwright.config.ts ./
COPY e2e/ ./e2e/

# Create directories for reports
RUN mkdir -p playwright-report test-results

# Run Playwright tests
# Exit code will be passed to Docker Compose
CMD ["npx", "playwright", "test", "--reporter=html,github"]
