# Test backend Dockerfile
# Build context is project root (..)

FROM python:3.11-slim

# Create non-root user for Claude SDK compatibility
RUN useradd -m -s /bin/bash appuser

WORKDIR /app

# Install git (required for GitPython) and curl (for uv install)
RUN apt-get update && apt-get install -y git curl && rm -rf /var/lib/apt/lists/*

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:$PATH"

# Copy pyproject.toml first for layer caching
COPY backend/pyproject.toml .
RUN uv sync --no-dev

# Copy application code
COPY backend/ .

# Copy test wiki fixtures and initialize as git repo
COPY tests/fixtures/wiki /wiki
# Configure git globally for root (needed for initial commit)
RUN git config --global user.email "test@test.com" && \
    git config --global user.name "Test User" && \
    cd /wiki && git init -b main && git add -A && git commit -m "Initial test fixtures"

# Set ownership and switch to non-root user
RUN chown -R appuser:appuser /app /wiki
USER appuser

# Add uv to appuser PATH
ENV PATH="/root/.local/bin:/home/appuser/.local/bin:$PATH"

# Configure git for appuser (needed for merge operations at runtime)
RUN git config --global user.email "test@test.com" && \
    git config --global user.name "Test User"

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=5s --timeout=3s --start-period=10s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health')" || exit 1

# Run uvicorn
CMD ["uv", "run", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
